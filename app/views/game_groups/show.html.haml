%h3 #{@game_group.name} #{@game_group.game_sessions.count} sessions
%br
%table#player_list.display
  %thead
    %tr
      %th Nick Name
      %th Sessions
  %tbody
    - @game_group.players.each do |player|
      %tr
        %td
          = "#{player.nick_name}"
        %td
          = "#{player.game_sessions.count}"
%br
%table#session_list.display
  %thead
    %tr
      %th Game Name
      %th Winner
  %tbody
    - @game_group.game_sessions.each do |session|
      %tr
        %td
          = "#{session.name}"
        %td
          = "#{session.winner.nick_name}"
